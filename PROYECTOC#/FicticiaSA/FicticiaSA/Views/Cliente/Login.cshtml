
@{
    ViewBag.Title = "Login";
}

@model  FicticiaSA.Models.Usuario
<h2>Iniciar Sesion </h2>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">

        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>USUARIO</label>
                @Html.TextBoxFor(x => x.name, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>PASSWORD</label>
                @Html.PasswordFor(x => x.password, htmlAttributes: new { @class = "form-control" })
            </div>
            <h5 style="color:red">@ViewBag.Message</h5>
            <input type="submit" value="Aceptar" class="btn btn-primary" />

            <a href="/Cliente/Alta" class="btn btn-primary">Registrarme</a>
        }
    </div>
    <div class="col-md-2"></div>
</div>

