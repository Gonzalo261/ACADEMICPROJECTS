
@{
    /**/

    ViewBag.Title = "ListadoClientes";
}

@model List<FicticiaSA.Models.DTOCliente>


@if (Session["usuario"] != null && Session["admin"] != null)
{

    <h2>Listado de Clientes</h2>
    <table class="table table-striped">
        <tr>
            <th>NOMBRE</th>
            <th>DNI</th>
            <th>EDAD</th>
            <th>GENERO</th>
            <th>MANEJA ? </th>
            <th>USA LENTES ? </th>
            <th>ES DIABÉTICO ? </th>
            <th>PADECE OTRA ENFERMEDAD ? CUAL?</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.nombre</td>
                <td>@item.dni</td>
                <td>@item.edad</td>
                <td>@item.genero</td>

                @if (item.maneja)
                {
                    <td>Si</td> }
                else
                {
                    <td>No</td>}
                @if (item.usaLentes)
                {
                    <td>Si</td> }
                else
                {
                    <td>No</td>}
                @if (item.diabetico)
                {
                    <td>Si</td> }
                else
                {
                    <td>No</td>}
                <td>@item.otraEnfermedad</td>
                <td>
                    <a href="/Cliente/Editar?idCliente=@item.idCliente" class="btn btn-success">Editar</a>
                    <a href="/Cliente/EliminarUsuario?idCliente=@item.idCliente" class="btn btn-warning">Eliminar</a>
                </td>
            </tr>
        }
    </table>

}
else
{
    <h2 style="color:red">Debe iniciar session</h2>
}
